<% layout('boilerplate') %>

<div class="container">
  <div class="row">
   <h1 style="text-align: center;">Add new Comment to <%= service.name %></h1>
    <div style="width: 30%; margin: 30px auto">
    <form action="/services/<%= service._id %>/comments" method="POST">
      <div class="form-group">
        <input class="form-control" type="text" name="comment[text]" placeholder="text">
       </div>
        <div class="form-group">
        <button class="btn btn-lg btn-success btn-block">Submit</button>
         </div>
      </form>
      <a href="/services">Go Back</a>
    </div>
    </div>
</div>
