<% layout('boilerplate') %>

<div class="container">
  <div class="row">
   <div class="col-md-3">
     <p class="lead">Service</p>
 <div class="list-group">
     <li class="list-group-item active">Info 1</li>
     <li class="list-group-item">Info 2</li>
     <li class="list-group-item">Info 3</li>
 </div>
 </div>
  <div class="col-md-9">
   <div class="thumbnail">
    <img id="thumbimg" class="img-responsive" src="<%=service.image %>">
     <div class="caption-full">
       <h4 class="pull-right">$<%= service.price %></h4>
       <h4><a><%=service.name%></a></h4>
         <p><%= service.description %></p>
         <p><em>Submitted By <%= service.author.email  %></em>
         </p>
         <% if(currentUser && service.author.id == currentUser._id){ %>
          <a class="btn btn-xs btn-warning" href="/services/<%= service._id %>/edit">Edit</a>
    <form id="deleteForm" action="/services/<%= service._id %>?_method=DELETE" method="POST">
     <button class="btn btn-xs btn-danger">Delete</button>
    </form>
    <% } %>
   </div>
 </div>
 <div class="well">
  <div class="text-right">
   <a class="btn btn-success" href="/services/<%= service._id %>/comments/new">Add new Comment</a>
    </div>
    <hr>
    <% service.comments.forEach(function(comment){ %>
    <div class="row">
     <div class="col-md-12">
       <strong><%= comment.author.email %></strong>
        <span class="pull-right">10 day ago</span>
         <p>
          <%= comment.text %>
          </p>
         </div>
        </div>
       <% }) %>
     </div>
    </div>
  </div>
</div>


